<%= search_form_for @q do |f| %>

  <%= f.label :名前検索 %>
  <%= f.search_field :name_cont %>

  <%= f.submit %>
<% end %>

<h3>ユーザー一覧</h3>

<table>
  <tr>
    <th>名前</th>
    <th>メールアドレス</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
    </tr>
  <% end %>
</table>