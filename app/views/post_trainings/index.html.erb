<p id="notice"><%= notice %></p>

<h1>トレーニング記録投稿</h1>

<table>
  <thead>
    <tr>
      <th>ユーザー</th>
      <th>メモ</th>
      <th>エクササイズ</th>
      <th>重量</th>
      <th>回数</th>
      <th>体重</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_trainings.each do |post_training| %>
      <tr>
        <td><%= link_to post_training.user.name, user_path(post_training.user) %></td>
        <td><%= post_training.note %></td>
        <td><%= post_training.exercise %></td>
        <td><%= post_training.weight %></td>
        <td><%= post_training.rep %></td>
        <td><%= post_training.bodyweight %></td>
        <td><%= link_to '詳細', post_training %></td>
        <% if user_signed_in? && post_training.user_id == current_user.id %>
          <td><%= link_to '編集', edit_post_training_path(post_training) %></td>
          <td><%= link_to '削除', post_training, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'トレーニング記録投稿へ', new_post_training_path if user_signed_in? %>
