<p id="notice"><%= notice %></p>

<h1>Post Trainings</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Note</th>
      <th>Exercise</th>
      <th>Weight</th>
      <th>Rep</th>
      <th>Bodyweight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_trainings.each do |post_training| %>
      <tr>
        <td><%= post_training.user_id %></td>
        <td><%= post_training.note %></td>
        <td><%= post_training.exercise %></td>
        <td><%= post_training.weight %></td>
        <td><%= post_training.rep %></td>
        <td><%= post_training.bodyweight %></td>
        <td><%= link_to 'Show', post_training %></td>
        <% if post_training.user_id == current_user.id %>
          <td><%= link_to 'Edit', edit_post_training_path(post_training) %></td>
          <td><%= link_to 'Destroy', post_training, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post Training', new_post_training_path %>
